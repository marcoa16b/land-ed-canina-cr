---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="En Educación Canina Alfa CR, adiestramos perros con más de 20 años de experiencia, ofreciendo un servicio a domicilio personalizado, responsable y puntual para fortalecer la conexión única entre cada perro y su dueño."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #e4e4e4;
    scroll-behavior: smooth;
  }
  .column {
    @apply w-[90%] sm:w-[80%] md:w-[70%] lg:w-[60%] mx-auto;
  }
</style>
